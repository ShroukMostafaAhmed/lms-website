import { BarChart, Bar, XAxis, Tooltip, ResponsiveContainer, Cell } from 'recharts';

const data = [
    { name: 'الأحد', value: 34 },
    { name: 'الإثنين', value: 45 },
    { name: 'الثلاثاء', value: 40 },
    { name: 'الأربعاء', value: 10 },
    { name: 'الخميس', value: 37 },
    { name: 'الجمعة', value: 39 },
    { name: 'السبت', value: 50 },
];

const BarCharts = () => {
    return (
        <div className="w-full max-w-6xl mt-10  p-6 rounded-xl">
            <ResponsiveContainer width="100%" height={650}>
                <BarChart data={data} barGap={8}> {/* Reduced barGap */}
                    {/* X Axis */}
                    <XAxis
                        dataKey="name"
                        tick={{ fill: '#94A3B8', fontSize: 20, fontWeight: '700' }}
                        axisLine={false}
                        tickLine={false}
                    />
                    {/* Tooltip */}
                    <Tooltip
                        contentStyle={{
                            backgroundColor: '#FFFFFF',
                            borderRadius: '8px',
                            border: '1px solid #E5E7EB',
                            color: '#1E293B',
                            fontSize: '20px',
                        }}
                        wrapperStyle={{ outline: 'none' }}
                        cursor={{ fill: 'transparent' }}
                    />
                    {/* Bars */}
                    <Bar dataKey="value" radius={[28, 28, 28, 28]} barSize={90}> {/* Adjusted barSize */}
                        {data.map((entry, index) => (
                            <Cell
                                key={`cell-${index}`}
                                fill={entry.name === 'الأربعاء' ? '#FF6B6B' : '#1E78EB'}
                            />
                        ))}
                    </Bar>
                </BarChart>
            </ResponsiveContainer>

            {/* Values below each bar */}
            <div className="flex justify-around mt-3 px-1"> {/* Changed justify-between to justify-around */}
                {data.map((entry) => (
                    <div key={entry.name} className="flex flex-col items-center flex-1 text-center">
                        <span
                            className={`font-semibold text-xl ${
                                entry.name === 'الأربعاء' ? 'text-[#FF6B6B]' : 'text-[#1D4ED8]'
                            }`}
                        >
                            {entry.value} د
                        </span>
                    </div>
                ))}
            </div>
        </div>
    );
};

export default BarCharts;